{
  "name": "react-discussion-board",
  "version": "1.0.0",
  "description": "Discussion board for creating forums in React",
  "author": "Michaela DeForest <michaela.deforest@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/mdeforest/react-discussion-board.git",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle --no-compress --jsx React.createElement --format modern,cjs",
    "start": "microbundle watch --no-compress --jsx React.createElement --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "CI=1 react-scripts test --env=jsdom --testResultsProcessor=jest-junit",
    "test:watch": "react-scripts test --env=jsdom",
    "docs": "rdr src/ --readmeFile ./README.md",
    "postversion": "git push && git push --tags"
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "babel-eslint": "^10.0.3",
    "chart.js": "^2.9.4",
    "cypress": "^6.5.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "jest-junit": "^12.0.0",
    "microbundle": "^0.13.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.6",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-chartjs-2": "^2.11.1",
    "react-dom": "^17.0.1",
    "react-scripts": "^3.4.1",
    "rollup-plugin-postcss": "^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "bootstrap": "^4.6.0",
    "dompurify": "^2.2.6",
    "jquery": "^3.5.1",
    "prop-types": "^15.7.2",
    "react-bootstrap": "^1.5.0",
    "react-html-parser": "^2.0.2",
    "react-paginate": "^7.1.0",
    "react-quill": "^1.3.5",
    "react-router-dom": "^5.2.0",
    "shards-ui": "^3.0.0"
  }
}
